{{#partial "content"}}
    {{if squadHeroes}}
    <h1>Heroes Fighting for our Cause: </h1><br>
    {{#each squadHeroes}}

        <div class="card border-dark mb-3" style="width: 50rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><h3>Name : {{ name }}</h3></li>
                <li class="list-group-item"><h3>Age : {{ age }}</h3></li>
                <li class="list-group-item"><h3>Superpower : {{specialPower}}</h3></li>
                <li class="list-group-item"><h3>Weakness : {{weakness}}</h3></li>
            </ul>
            <div class="card-body text-dark">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <a href="/heroes/{{id}}/update"><button type="button" class="btn btn-warning btn-lg">Edit Hero</button></a>
                    </div>
                    <div class="col-6">
                        <a href="/heroes/{{id}}/delete"><button type="button" class="btn btn-danger btn-lg">Delete Hero</button></a>
                    </div>
                </div>
            </div>
        </div>


    {{/each}}

{{/partial}}

{{> layout.hbs}}